% ##R006##
% ##40##
% """

% Defina un predicado capaz de validar una direccion ipV6
% sin comprimir
% https://es.wikipedia.org/wiki/IPv6#Notaci%C3%B3n_para_las_direcciones_IPv6
% 40 pts

% pv6("2001:0db8:85a3:08d3:1319:8a2e:0370:7334")
% true.
% ipv6("2001:0DB8:0000:0000:0000:0000:1428:57ab")
% true.
% ipv6("2001:db8:aaaa:bbbb:cccc:dddd:eeee:0001")
% true.
% """



listatom_liststring([A],LC):-atom_string(A,C),LC=[C].
listatom_liststring([A|RA],LC):-
    listatom_liststring(RA,LCC),
    atom_string(A,C), LC=[C|LCC].

string_to_liststring(Cadena,LCadenas):-
    string_chars(Cadena,LAtomos),
    listatom_liststring(LAtomos,LCadenas).

clean_liststring([""],[]).
clean_liststring([P],[P]).
clean_liststring([""|R],LSC):- clean_liststring(R,LSC).
clean_liststring([P|R],LSC):- clean_liststring(R,L1), LSC=[P|L1].

split_ipv6(Str,LS):-
    split_string(Str,":","",R),
    clean_liststring(R,LS).


hex("0").
hex("1").
hex("2").
hex("3").
hex("4").
hex("5").
hex("6").
hex("7").
hex("8").
hex("9").
hex("A").
hex("B").
hex("C").
hex("D").
hex("E").
hex("F").
hex("a").
hex("b").
hex("c").
hex("d").
hex("e").
hex("f").


grupo_hex([A]):- hex(A).
grupo_hex([A,B]):- hex(A),hex(B).
grupo_hex([A,B,C]):- hex(A),hex(B),hex(C).
grupo_hex([A,B,C,D]):- hex(A),hex(B),hex(C),hex(D).

grupo_valido(Str):-
    string_to_liststring(Str,Lista),
    grupo_hex(Lista).


ipv6(Str):-
    split_ipv6(Str,Grupos),
    length(Grupos,8),
    mapa_grupos(Grupos).

mapa_grupos([G1,G2,G3,G4,G5,G6,G7,G8]):-
    grupo_valido(G1),
    grupo_valido(G2),
    grupo_valido(G3),
    grupo_valido(G4),
    grupo_valido(G5),
    grupo_valido(G6),
    grupo_valido(G7),
    grupo_valido(G8).


